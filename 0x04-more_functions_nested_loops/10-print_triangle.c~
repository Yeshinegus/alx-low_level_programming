#include "holberton.h"
/**
 * print_triangle - prints diagonal line
 * @n: integer value
 * Return: void
 */

void print_triangle(int n)
{
int i, j;
if (n <= 0)
{
_putchar('\n');
}
else if (n > 0)
{
for (i = 0; i <= n; i++)
{

for (j = n; j > i; j--)
_putchar(' ');

_putchar('#');
_putchar('\n');
 }
}
_putchar('\n');
}
